<mvc:View 
    controllerName="project1.controller.ODataV4"
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
  <Table 
        id="ODataV4List" 
        items="{
            path: 'ODataV4>/Products',
            templateShareable: false,
            parameters: {
              $$updateGroupId: 'updateGroup'
            }
           }"
        mode="MultiSelect"
        selectionChange=".onProductsTableSelectionChange">
    <headerToolbar>
      <Toolbar >
        <Title text="{i18n>tableProductsTitle}"/>
        <ToolbarSpacer/>
        <Button text="{i18n>addProductButtonText}" press=".onAddNewProductButtonPress"/>
        <Button text="{i18n>deleteProductButtonText}" press=".onDeleteProductButtonPress" enabled="{= !!${configModel>/isDeleteButtonEnabled}}"/>
      </Toolbar>
    </headerToolbar>
    <columns>
      <Column>
        <Text  text="{i18n>columnName}" />
      </Column>
      <Column>
        <Text text="{i18n>columnDescription}"/>
      </Column>
      <Column>
        <Text text="{i18n>columnReleaseDate}"/>
      </Column>
      <Column>
        <Text text="{i18n>columnRating}"/>
      </Column>
      <Column>
        <Text text="{i18n>columnPrice}"/>
      </Column>
      <Column width="10em">
        <Text text="{i18n>columnActions}" />
      </Column>
    </columns>
    <items>
      <ColumnListItem >
        <cells>
          <ObjectIdentifier title="{ODataV4>Name}"/>
          <Text text="{ODataV4>Description}"/>
          <Text text="{
              path: 'ODataV4>ReleaseDate',
              type: 'sap.ui.model.odata.type.DateTimeOffset',
              formatOptions: { pattern: 'yyyy' }
          }"/>
          <RatingIndicator 
              maxValue="5"  
              value="{ODataV4>Rating}"
              enabled="false"
              iconSize="1rem"/>
          <Text 
            text="{
                path: 'ODataV4>Price',
                type: 'sap.ui.model.type.Float',
                formatOptions: {
                    maxFractionDigits: 2,
                    minFractionDigits: 2,
                    groupingEnabled: true
                }
            }"/>
          <Button text="{i18n>editProductButtonText}"  press=".onEditProductButtonPress"/>
        </cells>
      </ColumnListItem>
    </items>
  </Table>
</mvc:View>