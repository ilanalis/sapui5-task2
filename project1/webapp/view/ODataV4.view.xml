<mvc:View 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
  <Table 
        id="ODataV4List" 
        items="{
            path: 'ODataV4>/Products',
            templateShareable: false
           }"
        mode="MultiSelect"
        selectionChange=".onBooksTableSelectionChange"
        >
    <headerToolbar>
      <Toolbar >
        <Title text="{i18n>tableProductsTitle}"/>
      </Toolbar>
    </headerToolbar>
    <columns>
      <Column>
        <Text  text="{i18n>columnName}" />
      </Column>
      <Column>
        <Text text="{i18n>columnDescription}"/>
      </Column>
      <Column>
        <Text text="{i18n>columnReleaseDate}"/>
      </Column>
      <Column>
        <Text text="{i18n>columnRating}"/>
      </Column>
      <Column>
        <Text text="{i18n>columnPrice}"/>
      </Column>
    </columns>
    <items>
      <ColumnListItem >
        <cells>
          <ObjectIdentifier title="{ODataV4>Name}"/>
          <Text text="{ODataV4>Description}"/>
          <Text text="{
                        path: 'ODataV4>ReleaseDate',
                        type: 'sap.ui.model.odata.type.DateTimeOffset',
                        formatOptions: { pattern: 'yyyy' }
                    }"/>
          <RatingIndicator 
                        maxValue="5"  
                        value="{ODataV4>Rating}"
                        enabled="false"
                        iconSize="1rem"
                    />
          <Text 
                        text="{
                            path: 'ODataV4>Price',
                            type: 'sap.ui.model.type.Float',
                            formatOptions: {
                                maxFractionDigits: 2,
                                minFractionDigits: 2,
                                groupingEnabled: true
                            }
                        }"/>
        </cells>
      </ColumnListItem>
    </items>
  </Table>
</mvc:View>