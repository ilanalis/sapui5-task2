<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog 
        id="addJSONModelDialog"
        title="{i18n>addJSONModelDialogTitle}">
        <form:SimpleForm >
            <Label 
                text="{i18n>addJSONModelDialogLabelName}" 
                labelFor="nameInput">
            </Label>
            <Input 
                id="nameInput"  
                value="{temp>/name/value}" 
				placeholder="{i18n>addJSONModelDialogPlaceholderName}"
                required="true" 
                valueState="{temp>/name/valueState}"/>
            <Label 
                text="{i18n>addJSONModelDialogLabelAuthor}" 
                labelFor="authorInput"/>
            <Input 
                id="authorInput" 
                value="{temp>/author/value}" 
				placeholder="{i18n>addJSONModelDialogPlaceholderAuthor}"
                required="true" 
                valueState="{temp>/author/valueState}"/>
            <Label 
                text="{i18n>addJSONModelDialogLabelGenre}" 
                labelFor="genreInput"/>
            <Input 
                id="genreInput" 
                value="{temp>/genre/value}" 
								placeholder="{i18n>addJSONModelDialogPlaceholderGenre}"

                required="true" 
                valueState="{temp>/genre/valueState}"/>
            <Label 
                text="{i18n>addJSONModelDialogLabelReleaseDate}" 
                labelFor="releaseDate"/>
            <DatePicker
                id="releaseDate"
                value="{temp>/releaseDate/value}" 
                placeholder="{i18n>addJSONModelDialogPlaceholderReleaseDate}"
                required="true" 
                valueState="{temp>/releaseDate/valueState}"
                change=".onReleaseDateChange"
                valueFormat="yyyy-MM-dd"/>
            <Label 
                text="{i18n>addJSONModelDialogLabelQuantity}" 
                labelFor="quantityInput"/>
            <Input 
                id="quantityInput" 
                value="{temp>/availableQuantity/value}" 
                type="Number"
				placeholder="{i18n>addJSONModelDialogPlaceholderQuantity}"
                required="true" 
                valueState="{temp>/availableQuantity/valueState}"/>
        </form:SimpleForm>
        <beginButton>
            <Button text="{i18n>addJSONModelDialogButtonText}" press=".onJSONModelDialogAddRecordButtonPress"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>cancelJSONModelDialogButtonText}" press=".onJSONModelDialogCancelButtonPress"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>