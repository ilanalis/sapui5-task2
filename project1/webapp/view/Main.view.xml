<mvc:View 
    xmlns:core="sap.ui.core" 
    controllerName="project1.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
  <Page id="page" title="{i18n>title}">
    <IconTabBar 
      id="mainIconTabBar"
      select=".onFilterSelect">
      <items>
        <IconTabFilter key="JSONModel" text="{i18n>tabJSONModelText}">
          <mvc:XMLView viewName="project1.view.JSONModel"/>
        </IconTabFilter>
        <IconTabFilter key="ODataV2" text="{i18n>tabODataV2Text}">
          <mvc:XMLView viewName="project1.view.ODataV2"/>
        </IconTabFilter >
        <IconTabFilter key="ODataV4" text="{i18n>tabODataV4Text}">
          <mvc:XMLView viewName="project1.view.ODataV4"/>
        </IconTabFilter>
      </items>
    </IconTabBar>
  </Page>
</mvc:View>