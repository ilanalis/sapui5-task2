<mvc:View 
    xmlns:core="sap.ui.core" 
    controllerName="project1.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
  <Page id="page" title="{i18n>title}">
    <IconTabBar >
      <items>
        <IconTabFilter  text="{i18n>tabJSONModelText}">
          <mvc:XMLView viewName="project1.view.JSONModel"/>
        </IconTabFilter>
        <IconTabFilter text="{i18n>tabODataV2Text}">
          <mvc:XMLView viewName="project1.view.ODataV2"/>
        </IconTabFilter >
        <IconTabFilter  text="{i18n>tabODataV4Text}">
          <mvc:XMLView viewName="project1.view.ODataV4"/>
        </IconTabFilter>
      </items>
    </IconTabBar>
  </Page>
</mvc:View>