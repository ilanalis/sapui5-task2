<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:wt="project1.control">
  <Dialog 
        id="addNewProductDialog"
        title="{i18n>addNewProductDialogTitle}">
    <form:SimpleForm >
      <Label 
            text="{i18n>addNewProductDialogLabelName}" 
            labelFor="productNameInput">
        </Label>
      <Input 
            id="productNameInput"
            value="{configModel>name/value}" 
            placeholder="{i18n>addNewProductDialogPlaceholderName}"
            required="true" 
            valueState="{configModel>name/valueState}"
            valueStateText="{i18n>textInputValueStateErrorText}"
            liveChange=".onTextInputLiveChange"/>
      <Label 
            text="{i18n>addNewProductDialogLabelDescription}" 
            labelFor="productDescriptionInput"
            />
      <Input 
            id="productDescriptionInput"
            value="{configModel>description/value}" 
            placeholder="{i18n>addNewProductDialogPlaceholderDescription}"
            required="true" 
            valueState="{configModel>description/valueState}"
            valueStateText="{i18n>textInputValueStateErrorText}"
            liveChange=".onTextInputLiveChange"/>
      <Label 
            text="{i18n>addNewProductDialogLabelReleaseDate}" 
            labelFor="productReleaseDateInput"/>
      <DatePicker
            id="productReleaseDateInput"
            value="{configModel>releaseDate/value}" 
            placeholder="{i18n>addNewProductDialogPlaceholderReleaseDate}"
            required="true" 
            valueState="{configModel>releaseDate/valueState}"
            valueStateText="{i18n>datePickerInputValueStateErrorText}"
            change=".onReleaseDateChange"
            valueFormat="yyyy-MM-dd"/>
      <Label 
            text="{i18n>addNewProductDialogLabelRating}" 
            labelFor="productRatingInput"/>
      <Input
            id="productRatingInput"
            type="Number"
            value="{configModel>rating/value}"
            placeholder="{i18n>addNewProductDialogPlaceholderRating}"
            required="true" 
            valueState="{configModel>rating/valueState}"
            valueStateText="{i18n>addNewProductDialogRatingOutOfRangeError}"
            liveChange=".onRatingInputLiveChange"
            />
      <Label 
            text="{i18n>addNewProductDialogLabelPrice}" 
            labelFor="productPriceInput"/>
      <Input 
            id="productPriceInput"
            value="{configModel>price/value}" 
            type="Number"
            placeholder="{i18n>addNewProductDialogPlaceholderPrice}"
            required="true" 
            valueState="{configModel>price/valueState}"
            valueStateText="{i18n>priceInputValueStateErrorText}"
            liveChange=".onPriceInputLiveChange"
            />
    </form:SimpleForm>
    <beginButton>
      <Button text="{i18n>addNewProductDialogAddButtonText}" press=".onAddNewProductDialogAddButtonPress"/>
    </beginButton>
    <endButton>
      <Button text="{i18n>addNewProductDialogCancelButtonText}" press=".onAddNewProductDialogCancelButtonPress"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>