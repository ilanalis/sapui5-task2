<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:wt="project1.control">
    <Dialog 
        id="addNewProductDialog"
        title="{i18n>addNewProductDialogTitle}">
        <form:SimpleForm >
            <Label 
                text="{i18n>addNewProductDialogLabelName}" 
                labelFor="productNameInput">
            </Label>
            <Input 
                id="productNameInput"
                value="{configModel>/newProduct/name/value}" 
				placeholder="{i18n>addNewProductDialogPlaceholderName}"
                required="true" 
                valueState="{configModel>/newProduct/name/valueState}"
                liveChange=".onInputLiveChange"/>
            <Label 
                text="{i18n>addNewProductDialogLabelDescription}" 
                labelFor="productDescriptionInput"
                />
            <Input 
                id="productDescriptionInput"
                value="{configModel>/newProduct/description/value}" 
				placeholder="{i18n>addNewProductDialogPlaceholderDescription}"
                required="true" 
                valueState="{configModel>/newProduct/description/valueState}"
                liveChange=".onInputLiveChange"/>
            <Label 
                text="{i18n>addNewProductDialogLabelReleaseDate}" 
                labelFor="productReleaseDateInput"/>
            <DatePicker
                id="productReleaseDateInput"
                value="{configModel>/newProduct/releaseDate/value}" 
                placeholder="{i18n>addNewProductDialogPlaceholderReleaseDate}"
                required="true" 
                valueState="{configModel>/newProduct/releaseDate/valueState}"
                change=".onReleaseDateChange"
                valueFormat="yyyy-MM-dd"/>
            <Label 
                text="{i18n>addNewProductDialogLabelRating}" 
                labelFor="productRatingInput"/>
            <Input
                id="productRatingInput"
                type="Number"
                value="{configModel>/newProduct/rating/value}"
				placeholder="{i18n>addNewProductDialogPlaceholderRating}"
                required="true" 
                valueState="{configModel>/newProduct/rating/valueState}"
                valueStateText="{configModel>/newProduct/rating/valueStateText}"
                liveChange=".onInputLiveChange"
                />
            <Label 
                text="{i18n>addNewProductDialogLabelPrice}" 
                labelFor="productPriceInput"/>
            <Input 
                id="productPriceInput"
                value="{configModel>/newProduct/price/value}" 
                type="Number"
				placeholder="{i18n>addNewProductDialogPlaceholderPrice}"
                required="true" 
                valueState="{configModel>/newProduct/price/valueState}"
                liveChange=".onInputLiveChange"
                />
        </form:SimpleForm>
        <beginButton>
            <Button text="{i18n>addNewProductDialogAddButtonText}" press=".onAddnewProductDialogAddButtonPress" enabled="{configModel>/isFormValid}"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>addNewProductDialogCancelButtonText}" press=".onAddNewProductDialogCancelButtonPress"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>