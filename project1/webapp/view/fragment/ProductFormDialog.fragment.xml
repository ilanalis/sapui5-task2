<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:wt="project1.control">
      <Dialog 
        id="productFormDialog"
        title="{i18n>productFormDialogTitle}">
            <form:SimpleForm >
                  <Label 
                        text="{i18n>productFormDialogLabelName}" 
                        labelFor="productNameInput">
                  </Label>
                  <Input 
                        id="productNameInput"
                        value="{configModel>name/value}" 
                        placeholder="{i18n>productFormDialogPlaceholderName}"
                        required="true" 
                        valueState="{configModel>name/valueState}"
                        valueStateText="{i18n>textInputValueStateErrorText}"
                        liveChange=".onTextInputLiveChange"/>
                  <Label 
            text="{i18n>productFormDialogLabelDescription}" 
            labelFor="productDescriptionInput"
            />
                  <Input 
            id="productDescriptionInput"
            value="{configModel>description/value}" 
            placeholder="{i18n>productFormDialogPlaceholderDescription}"
            required="true" 
            valueState="{configModel>description/valueState}"
            valueStateText="{i18n>textInputValueStateErrorText}"
            liveChange=".onTextInputLiveChange"/>
                  <Label 
            text="{i18n>productFormDialogLabelReleaseDate}" 
            labelFor="productReleaseDateInput"/>
                  <DatePicker
            id="productReleaseDateInput"
            placeholder="{i18n>productFormDialogPlaceholderReleaseDate}"
            required="true" 
            valueState="{configModel>releaseDate/valueState}"
            valueStateText="{i18n>datePickerInputValueStateErrorText}"
            change=".onReleaseDateChange"
            value="{
                  path: 'configModel>releaseDate/value',
                  type: 'sap.ui.model.type.Date',  
                  formatOptions: {
                        pattern: 'yyyy-MM-dd'        
                  }
            }"/>
                  <Label 
            text="{i18n>productFormDialogLabelRating}" 
            labelFor="productRatingInput"/>
                  <Input
            id="productRatingInput"
            type="Number"
            value="{configModel>rating/value}"
            placeholder="{i18n>productFormDialogPlaceholderRating}"
            required="true" 
            valueState="{configModel>rating/valueState}"
            valueStateText="{i18n>productFormDialogRatingOutOfRangeError}"
            liveChange=".onRatingInputLiveChange"
            />
                  <Label 
            text="{i18n>productFormDialogLabelPrice}" 
            labelFor="productPriceInput"/>
                  <Input 
            id="productPriceInput"
            value="{configModel>price/value}" 
            type="Number"
            placeholder="{i18n>productFormDialogPlaceholderPrice}"
            required="true" 
            valueState="{configModel>price/valueState}"
            valueStateText="{i18n>priceInputValueStateErrorText}"
            liveChange=".onPriceInputLiveChange"
            />
            </form:SimpleForm>
            <footer >
                  <Toolbar>
                        <ToolbarSpacer/>
                        <Button 
            text="{i18n>productFormDialogSaveButtonText}" 
            press=".onProductFormDialogSaveButtonPress"  
            visible="{configModel>/isDialogInEditMode}" 
            type="Emphasized"/>
                        <Button 
            text="{i18n>productFormDialogAddButtonText}" 
            press=".onProductFormDialogAddButtonPress"  
            visible="{= !${configModel>/isDialogInEditMode}}" 
            type="Emphasized"/>
                        <Button 
            text="{i18n>productFormDialogCancelButtonText}" 
            press=".onDialogCancelButtonPress"
            />
                  </Toolbar>
            </footer>
      </Dialog>
</core:FragmentDefinition>