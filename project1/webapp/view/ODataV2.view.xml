<mvc:View 
    xmlns:core="sap.ui.core" 
    controllerName="project1.controller.ODataV2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
  <Table 
        id="ODataV2List" 
        items="{
            path: 'ODataV2>/Products'
           }"
        mode="MultiSelect"
        selectionChange=".onProductsTableSelectionChange">
    <headerToolbar>
      <Toolbar >
        <Title text="{i18n>tableProductsTitle}"/>
        <ToolbarSpacer/>
        <SearchField 
                  placeholder="{i18n>searchFieldPlaceholderText}"
                  width="50%"
                  liveChange=".onFilterProductsByProductName"/>
        <Label text="{i18n>comboBoxLabelText}" labelFor="sortCombo"/>
        <ComboBox id="sortCombo" placeholder="{i18n>comboBoxPlaceholderText}" selectionChange=".onSorterProducts">
          <items>
            <core:Item key="Name" text="{i18n>comboBoxItemName}"></core:Item>
            <core:Item key="Description" text="{i18n>comboBoxItemDescription}"></core:Item>
            <core:Item key="ReleaseDate" text="{i18n>comboBoxItemReleaseDate}"></core:Item>
            <core:Item key="Rating" text="{i18n>comboBoxItemRating}"></core:Item>
            <core:Item key="Price" text="{i18n>comboBoxItemPrice}"></core:Item>
          </items>
        </ComboBox>
        <Button text="{i18n>addProductButtonText}" press=".onAddNewProductButtonPress"/>
        <Button text="{i18n>deleteProductButtonText}" press=".onDeleteProductButtonPress" enabled="{= !!${configModel>/isDeleteButtonEnabled}}"/>
      </Toolbar>
    </headerToolbar>
    <columns>
      <Column >
        <Text  text="{i18n>columnName}" />
      </Column>
      <Column >
        <Text text="{i18n>columnDescription}"/>
      </Column>
      <Column >
        <Text text="{i18n>columnReleaseDate}"/>
      </Column>
      <Column >
        <Text text="{i18n>columnRating}"/>
      </Column>
      <Column >
        <Text text="{i18n>columnPrice}"/>
      </Column>
      <Column width="10em">
        <Text text="{i18n>columnActions}" />
      </Column>
    </columns>
    <items>
      <ColumnListItem 
        type="Navigation"
        press=".onProductPress">
        <cells>
          <ObjectIdentifier title="{ODataV2>Name}"/>
          <Text text="{ODataV2>Description}"/>
          <Text 
            text="{
              path: 'ODataV2>ReleaseDate',
              type: 'sap.ui.model.type.Date',
              formatOptions: {pattern: 'yyyy',
              UTC: true}
            }"/>
          <RatingIndicator 
              maxValue="5"  
              value="{ODataV2>Rating}"
              enabled="false"
              iconSize="1rem"
          />
          <Text 
              text="{
                  path: 'ODataV2>Price',
                  type: 'sap.ui.model.type.Float',
                  formatOptions: {
                      maxFractionDigits: 2,
                      minFractionDigits: 2
                  }
              }"/>
          <Button text="{i18n>editProductButtonText}"  press=".onEditProductButtonPress"/>
        </cells>
      </ColumnListItem>
    </items>
  </Table>
</mvc:View>