<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog 
        id="addMainDialog"
        title="{i18n>addMainDialogTitle}">
        <form:SimpleForm >
            <Label 
                text="{i18n>addMainDialogLabelName}" 
                labelFor="nameInput">
            </Label>
            <Input 
                id="nameInput"  
                value="{temp>/name/value}" 
				placeholder="Enter name"
                required="true" 
                valueState="{temp>/name/valueState}"/>
            <Label 
                text="{i18n>addMainDialogLabelAuthor}" 
                labelFor="authorInput"/>
            <Input 
                id="authorInput" 
                value="{temp>/author/value}" 
				placeholder="Enter author"
                required="true" 
                valueState="{temp>/author/valueState}"/>
            <Label 
                text="{i18n>addMainDialogLabelGenre}" 
                labelFor="genreInput"/>
            <Input 
                id="genreInput" 
                value="{temp>/genre/value}" 
				placeholder="Enter genre"
                required="true" 
                valueState="{temp>/genre/valueState}"/>
            <Label 
                text="{i18n>addMainDialogLabelReleaseDate}" 
                labelFor="releaseDate"/>
            <DatePicker
                id="releaseDate"
                placeholder="Enter Date"
                required="true" 
                value="{temp>/releaseDate/value}" 
                valueState="{temp>/releaseDate/valueState}"
                change=".onReleaseDateChange"/>
            <Label 
                text="{i18n>addMainDialogLabelQuantity}" 
                labelFor="quantityInput"/>
            <Input 
                id="quantityInput" 
                value="{temp>/availableQuantity/value}" 
                type="Number"
				placeholder="Enter quantity"
                required="true" 
                valueState="{temp>/availableQuantity/valueState}"/>
        </form:SimpleForm>
        <beginButton>
            <Button text="{i18n>addMainDialogButtonAdd}" press=".onAddRecordButtonPress"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>addMainDialogButtonCancel}" press=".onCancelAddingRecordButtonPress"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>